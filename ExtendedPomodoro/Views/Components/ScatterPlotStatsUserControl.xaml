<UserControl x:Class="ExtendedPomodoro.Views.Components.ScatterPlotStatsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExtendedPomodoro.Views.Components"
             mc:Ignorable="d" 
             xmlns:plot="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
             Background="{StaticResource MainBackground}"
             d:DesignHeight="450" d:DesignWidth="800">
    <plot:WpfPlot 
            x:Name="StatsPlotView"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Center"/>
</UserControl>
