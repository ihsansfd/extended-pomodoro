<Window x:Class="ExtendedPomodoro.Views.Components.ScatterPlotStatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExtendedPomodoro.Views.Components"
        xmlns:plot="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Title="Full Screen Stats"
        Height="450" Width="800"
        Style="{StaticResource WindowBaseStyle}">
        <plot:WpfPlot 
            x:Name="StatsPlotView"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Center"/>
</Window>
