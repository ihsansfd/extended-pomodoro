                </Canvas>
            </Viewbox>
            <!--#endregion the icon path-->

            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 0 0 20">
                <Button Style="{StaticResource ButtonStyle}" Click="OK_Button_Click">
                    <TextBlock>
                        <Run>OK (</Run><Run x:Name="PART_RemainingTimeInSecondsRun"/><Run>s)</Run>
                    </TextBlock>
                </Button>
            </WrapPanel>
        </Grid>
    </Border>
</UserControl>
