<Page x:Class="ExtendedPomodoro.Views.StatsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExtendedPomodoro.Views"
      xmlns:controls="clr-namespace:ExtendedPomodoro.Controls"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StatsView">

    <Grid Width="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <WrapPanel HorizontalAlignment="Center" Margin="0 0 0 20">
            <Button Style="{StaticResource LeftCornerRadiusButtonStyle}">
                <iconPacks:PackIconBootstrapIcons Width="12" Height="12" Kind="CaretLeftFill"/>
            </Button>
            <Label Background="{StaticResource Primary}"
                   HorizontalContentAlignment="Center"  
                   VerticalContentAlignment="Center" Padding="20 0 20 0">
                <TextBlock Foreground="{StaticResource White}">3 March 2020 — 10 March 2020</TextBlock>
            </Label>
            <Button Style="{StaticResource RightCornerRadiusButtonStyle}">
                <iconPacks:PackIconBootstrapIcons Width="12" Height="12" Kind="CaretRightFill"/>
            </Button>
        </WrapPanel>
        <WrapPanel Grid.Row="1" HorizontalAlignment="Center">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock 
                    Text="Pomodoro"
                    Grid.Column="0"
                    Margin="0 0 20 10"
                    Style="{StaticResource TextBlockFormLabelStyle}"/>
                <TextBlock 
                    Text="45"
                    Grid.Column="1"
                    Style="{StaticResource TextBlockFormValueStyle}" 
                    HorizontalAlignment="Right"/>
                
                <TextBlock 
                    Text="Short Breaks"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0 0 20 10"
                    Style="{StaticResource TextBlockFormLabelStyle}"/>
                <TextBlock 
                    Text="45"
                    Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource TextBlockFormValueStyle}" 
                    HorizontalAlignment="Right"/>

                <TextBlock 
                    Text="Long Breaks"
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="0 0 20 0"
                    Style="{StaticResource TextBlockFormLabelStyle}"/>
                <TextBlock 
                    Text="45"
                    Grid.Row="2"
                    Grid.Column="1"
                    Style="{StaticResource TextBlockFormValueStyle}" 
                    HorizontalAlignment="Right"/>
            </Grid>
            <Grid Grid.Column="1" Margin="40 0 0 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock 
                    Text="Time Spent"
                    Grid.Column="0"
                    Margin="0 0 20 10"
                    Style="{StaticResource TextBlockFormLabelStyle}"/>
                    <TextBlock 
                    Text="1600 minutes"
                    Grid.Column="1"
                    Style="{StaticResource TextBlockFormValueStyle}" 
                    HorizontalAlignment="Right"/>

                    <TextBlock 
                    Text="Tasks Completed"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0 0 20 0"
                    Style="{StaticResource TextBlockFormLabelStyle}"/>
                    <TextBlock 
                    Text="10"
                    Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource TextBlockFormValueStyle}" 
                    HorizontalAlignment="Right"/>
                </Grid>

            </Grid>
        </WrapPanel>
        <Border Background="LightGray" CornerRadius="5" Grid.Row="2" Margin="0 20 0 0">

        </Border>
    </Grid>
</Page>
