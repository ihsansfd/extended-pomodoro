        <controls:Modal x:Name="ModalCreateTask" Background="White" Width="310" Height="225" IsShown="False">
            <StackPanel Grid.IsSharedSizeScope="True" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" SharedSizeGroup="Label"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock 
                    Text="Title"
                    Margin="0 0 20 0"
                    VerticalAlignment="Center"
                    Style="{StaticResource TextBoxLabelStyle}"
                    />
                    <TextBox 
                    Grid.Column="1"
                    Width="175"
                    Text="{Binding CreateTaskViewModel.Name}"
                    Style="{StaticResource TextBoxStyle}"
                    />
                </Grid>
                <Grid Margin="0 20 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" SharedSizeGroup="Label"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock 
                    Text="Description"
                    Margin="0 0 20 0"
                    Style="{StaticResource TextBoxLabelStyle}"
                    />
                    <TextBox 
                    Grid.Column="1"
                    Height="65"
                    Width="175"
                    Text="{Binding CreateTaskViewModel.Description}"
                    Style="{StaticResource TextBoxStyle}"
                    />
                </Grid>
                <Grid Margin="0 20 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" SharedSizeGroup="Label"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock 
                    Text="Est. Pomodoro"
                    Margin="0 0 20 0"
                    VerticalAlignment="Center"
                    Style="{StaticResource TextBoxLabelStyle}"
                    />
                    <TextBox 
                    Grid.Column="1"
                    Width="60"
                    Text="{Binding CreateTaskViewModel.EstPomodoro}"
                    Style="{StaticResource TextBoxStyle}"
                    />
                </Grid>
                <WrapPanel HorizontalAlignment="Right" Margin="0 20 0 0">
                    <Button Style="{StaticResource ButtonStyle}" 
                            Content="Cancel" 
                            Click="ButtonCancelCreateTaskModal_Click"
                            Margin="0 0 10 0"/>
                    <Button Style="{StaticResource ButtonInfoStyle}" 
                            Command="{Binding CreateTaskViewModel.CreateTaskCommand}"
                            Content="Create"/>
                </WrapPanel>
            </StackPanel>
        </controls:Modal>

    </Grid>
